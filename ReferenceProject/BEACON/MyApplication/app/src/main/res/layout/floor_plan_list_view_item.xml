<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/floorPlanImageView"
        android:textColor="@color/gray"
        android:layout_width="@dimen/floor_plan_list_view_height"
        android:layout_height="@dimen/floor_plan_list_view_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/floor_plan_list_view_height">

        <TextView
            android:id="@+id/floorPlanNameAndSizeTextView"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/floorPlanDescriptionTextView"
            android:textColor="@color/gray"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</LinearLayout>
