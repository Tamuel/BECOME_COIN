<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.softwork.ydk.beacontestapp.StartActivity">

    <TextView
        android:text="Set Room"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/RoomDataTextView"
        android:text="Room Data : NONE"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/RoomWidthEditText"
        android:hint="Room Width"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/RoomHeightEditText"
        android:hint="Room Height"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Number of Sells"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/HorizontalSellsEditText"
            android:hint="Horizontal"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/VerticalSellsEditText"
            android:hint="Vertical"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/SetRoomButton"
        android:text="Set Room Data"
        android:layout_marginTop="30dp"
        android:onClick="onButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/BeaconTestButton"
        android:text="Test Beacon"
        android:layout_marginTop="30dp"
        android:onClick="onButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/MagnaticTestButton"
        android:text="Measure Magnetic Field"
        android:onClick="onButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/IntertiaTestButton"
        android:text="Intertia Test"
        android:onClick="onButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/GetMapButton"
        android:text="Get Map"
        android:onClick="onButtonClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
